<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %> <%= @friend.last_name %>
  </h1>
  <p class="lead">
    Email: <%= @friend.email %><br/>
    Phone: <%= @friend.phone %><br/>
    Created by: <%= @friend.user.email %>
  </p>
  <br/>

  <div class="d-flex gap-2">
  <%= link_to 'Show', @friend, class: "btn btn-secondary me-2" %>
  <%= button_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger me-2" %>
  <%= link_to 'Back', friends_path, class: "btn btn-dark" %>
</div>
</div>



